x=int(input())

a=[0]*107
def start(n,m):
    sum =0+m
    y=n-m
    while y!=1:
        if not y%3:
            y=y/3
            sum +=sum
        elif not y%2:
            y=y/2
            sum+=sum
        else:
            y-=y
    return sum

l=0
while a.count(0)!=1:
    for i in range(1,107):
        if a[i]==0: 
            a[i]=start(i,l)
    l+=l

print(a[x])
